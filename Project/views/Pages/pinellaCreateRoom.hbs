<div class="container text-white py-5">
  <h2 class="mb-4">ðŸŽ´ Crea una nuova partita a Pinella</h2>

  <form action="/pinella/create" method="POST" class="bg-dark p-4 rounded">
    <div class="mb-3">
      <label for="nickname" class="form-label">Il tuo nickname</label>
      <input type="text" class="form-control" id="nickname" name="nickname" required>
    </div>

    <div class="mb-3">
      <label for="playerCount" class="form-label">Numero totale di giocatori</label>
      <select class="form-select" id="playerCount" name="playerCount" required>
        <option value="2">2 giocatori</option>
        <option value="3">3 giocatori</option>
        <option value="4">4 giocatori</option>
      </select>
    </div>

    <div class="mb-3">
      <label for="cpuCount" class="form-label">Numero di CPU</label>
      <select class="form-select" id="cpuCount" name="cpuCount" required>
        <option value="0">Nessuna CPU</option>
        <option value="1">1 CPU</option>
        <option value="2">2 CPU</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary w-100">Crea stanza</button>
  </form>
</div>
